<%- include("Header.ejs"); %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/style.css" rel="stylesheet">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Inclua Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

        <title>Editar Álbum</title>
    </head>

    <body>
        <div class=" container mt-3 " style="width: 28rem;">
            <h1>Editar Álbum</h1>
            <% for(var i=0; i < dados.length; i++) { %>
                <!-- Formulário para editar uma música -->
                <form action="/editar-album/<%= dados[i].id_album %>" method="post" id="albumForm" class="forms-card">
                    <div class="card-body">
                        <label for="titulo_album">
                            <h2 class="card-title">
                                <%= dados[i].titulo.toUpperCase() %>
                            </h2>
                        </label>
                        <br>
                        <label for="titulo_album">Título do Álbum:</label>
                        <input type="text" name="titulo_album" class="form-control" id="album" value="<%= dados[i].titulo_album %>" required>
                        <br>
                        <label for="ano_lancamento">Lançamento do Álbum:</label>
                        <input type="text" name="ano_lancamento" class="form-control" id="album" value="<%= dados[i].ano_lancamento %>" required>
                        <br>
                        <!-- Campo para selecionar um artista -->
                        <label for="artista">Selecione um artista:</label>
                        <select class="form-control" id="artista" name="id_artista">
                            <!-- Opção pré-selecionada com o artista atual -->
                            <option value="<%= dados[i].id_artista %>">
                                <%= dados[i].nome %>
                            </option>
                            <!-- Loop para exibir todos os artistas disponíveis -->
                            <% for(var i=0; i < todosArtistas.length; i++) { %>
                                <option value="<%= todosArtistas[i].id_artista %>">
                                    <%= todosArtistas[i].nome %>
                                </option>
                                <% } %>
                        </select>
                        <% } %>
                            <br />
                            <button class="btn bg-info text-white submit" id="button1" type="submit">Salvar
                                Alterações</button>
                            <a href="/" class="btn  text-light">Voltar</a>
                    </div>
                </form>
        </div>
    </body>

    </html>