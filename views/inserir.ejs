<%- include("Header.ejs"); %>
    <link href="/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>

    </style>
    <div class=" container mt-3 " style="width: 28rem;">
        <h1>Adicionar Conteúdo</h1>

            <form action="/inserir" method="post" class="forms-card" id="albumForm">
                <div class="card-body">
                    <label for="">Selecione um artista:</label>
                    <select class="form-control" id="artista" name="id_artista" onchange="toggleNomeArtista()">
                        <option value="" selected disabled hidden>Escolha um artista</option>
                        <% for(var i=0; i < results.length; i++) { %>
                            <option value="<%= results[i].id_artista %>">
                                <%= results[i].nome %>
                            </option>
                            <% } %>
                                <option value="novoArtista">Outro</option>
                    </select>
                    <!-- Campo para digitar OUTRO ARTISTA -->
                    <label for="nomeArtista" id="nomeArtistaLabel" style="display:none;">Nome do Artista:</label>
                    <input type="text" name="nome" id="nomeArtista" class="nome-artista form-control"
                        style="display:none;" required>
                    <br />

                    <label for="">Informe o álbum:</label>
                    <input type="text" class="form-control"name="titulo_album"
                        value="<%= results.titulo_album %>" required />

                    <br />
                    <button class="btn bg-info text-white submit" id="button1" type="submit"
                        onclick="mostrarFormularioMusica()">
                        Salvar Álbum</button>
                    <a href="/" class="btn  text-light">Voltar</a>

                </div>
            </form>
    </div>

    <!-- Formulário de música (inicialmente escondido) -->
    <div id="addForm" style="display:none;" class=" container mt-3 " style="width: 28rem;">
        <form action="inserir" method="post" class="forms-card">
            <div class="card-body">
                <label for="">Musica</label>
                <input type="text" name="titulo" class="form-control" value="<%= results.titulo %>" />
            </div>
            <div class="form-group">
                <label for="">Ano de Lançamento</label>
                <input type="text" name="ano_lancamento" class="form-control" value="<%= results.ano_lancamento %>" />
            </div>

            <br>
            <input class="btn bg-info text-white submit" id="button1" type="submit" name="btIncuirPub"
                value="Inserir" />
            <a href="/" class="btn  text-light">Voltar</a>
    </div>
    </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>

    <script>
        function mostrarFormularioMusica() {
            document.getElementById('albumForm').style.display = 'none';
            document.getElementById('addForm').style.display = 'block';
        }

        function toggleNomeArtista() {
            var select = document.getElementById("artista");
            console.log("Artista no inserir.ejs: ", select);
            var nomeArtistaLabel = document.getElementById("nomeArtistaLabel");
            var nomeArtistaInput = document.getElementById("nomeArtista");

            if (select.value === "novoArtista") {
                nomeArtistaLabel.style.display = "block";
                nomeArtistaInput.style.display = "block";
            } else {
                nomeArtistaLabel.style.display = "none";
                nomeArtistaInput.style.display = "none";
            }
        }
    </script>