<%- include("Header.ejs"); %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Inclua Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        /* Adicione estilos para ajustar o tamanho do dropdown */
        select {
            width: 200px;
            /* Ajuste o valor conforme necessário */
            padding: 5px;
            /* Adicione espaço interno conforme necessário */
        }
    </style>

    <form action="/salvar-album" method="post" class="container mt-5" id="albumForm">
        <div class="mt-3">
            <div class="form-group">
                <label for="artista">Selecione um artista:</label>
                <select class="form-control" id="artista" name="id_artista">
                    <option>Selecione um opção</option>
                    <% for(var i=0; i < results.length; i++) { %>
                        <option value="<%= results[i].id_artista %>">
                            <%= results[i].nome %>
                        </option>
                        <% } %>
                </select>
                <br />
                <label for="album">Informe o álbum:</label>
                <input type="text" class="form-control" id="album" name="titulo_album" required />
                <br />
                <button class="btn btn-primary" id="button1" type="submit" onclick="mostrarFormularioMusica()">
                    Salvar Álbum</button>
                <a href="/" class="btn btn-outline-primary btn-sm">Voltar</a>


            </div>
        </div>
    </form>


    <!-- Formulário de música (inicialmente escondido) -->
    <div id="addForm" style="display:none;">
        <form action="inserir" method="post" class="container mt-5">
            <div class="form-group">
                <label for="">Musica</label>
                <input type="text" name="titulo" class="form-control" value="<%= results.titulo %>" />
            </div>
            <div class="form-group">
                <label for="">Ano de Lançamento</label>
                <input type="text" name="ano_lancamento" class="form-control" value="<%= results.ano_lancamento %>" />
            </div>

            <br>
            <input class="btn btn-primary" id="button1" type="submit" name="btIncuirPub" value="Inserir" />
            <a href="/" class="btn btn-outline-primary btn-sm">Voltar</a>
    </div>
    </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>

    <script>
        function mostrarFormularioMusica() {
            document.getElementById('albumForm').style.display = 'none';
            document.getElementById('addForm').style.display = 'block';
        }
    </script>